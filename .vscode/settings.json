{
	"search.exclude": {
		"**/node_modules": true,
		"**/bower_components": true,
		"**/_build": true,
		"**/deps": true,
		"**/dist": true,
		"**/.cache": true,
		"typescript/**": true
	},
	"files.watcherExclude": {
		"**/.git/objects/**": true,
		"**/.git/subtree-cache/**": true,
		"**/node_modules/**": true,
		"**/bower_components": true,
		"**/_build": true,
		"**/deps": true
	},
	"eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact"],
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": true
	},
	"editor.formatOnSave": true,
	"[typescriptreact]": {
		"editor.defaultFormatter": "vscode.typescript-language-features"
	},
	"files.exclude": {
		"web/node_modules": true
	},
	"workbench.colorCustomizations": {
		"activityBar.activeBackground": "#48af6b",
		"activityBar.activeBorder": "#ede8f6",
		"activityBar.background": "#48af6b",
		"activityBar.foreground": "#15202b",
		"activityBar.inactiveForeground": "#15202b99",
		"activityBarBadge.background": "#ede8f6",
		"activityBarBadge.foreground": "#15202b",
		"statusBar.background": "#398b55",
		"statusBar.foreground": "#e7e7e7",
		"statusBarItem.hoverBackground": "#48af6b",
		"titleBar.activeBackground": "#398b55",
		"titleBar.activeForeground": "#e7e7e7",
		"titleBar.inactiveBackground": "#398b5599",
		"titleBar.inactiveForeground": "#e7e7e799"
	},
	"peacock.color": "#398b55",
	"editor.insertSpaces": false,
	// The number of spaces a tab is equal to. This setting is overriden based on the file contents when `editor.detectIndentation` is on.
	"editor.tabSize": 4,
	// When opening a file, `editor.tabSize` and `editor.insertSpaces` will be detected based on the file contents.
	"editor.detectIndentation": true,
	"typescript.tsdk": "./web/node_modules/typescript/lib"
}
